{
    "description": "CINQ Backend PHP Test!",
    "authors": [
        {
            "name": "Diogo Alexsander Cavilha",
            "email": "diogocavilha@gmail.com"
        }
    ],
    "require": {
        "slim/slim": "^3.0",
        "monolog/monolog": "^1.23",
        "vlucas/phpdotenv": "~2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "mockery/mockery": "~0.9",
        "squizlabs/php_codesniffer": "2.8.1",
        "phpmd/phpmd": "2.6.0",
        "robmorgan/phinx": "0.9.2"
    },
    "autoload": {
        "psr-4": {
            "Ecommerce\\": "src/",
            "Ecommerce\\Exceptions\\": "src/Ecommerce/Exceptions/",
            "Ecommerce\\Http\\Controllers\\": "src/Ecommerce/Http/Controllers/",
            "Ecommerce\\Repositories\\": "src/Ecommerce/Repositories/",
            "Ecommerce\\Repositories\\Entities\\": "src/Ecommerce/Entities/",
            "Ecommerce\\Http\\Middlewares\\": "src/Ecommerce/Http/Middlewares/",
            "Ecommerce\\Business\\": "src/Ecommerce/Business/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Tests\\Exceptions\\": "tests/Ecommerce/Exceptions/",
            "Tests\\Repositories\\": "tests/Ecommerce/Repositories/",
            "Tests\\Entities\\": "tests/Ecommerce/Entities/",
            "Tests\\Http\\Middlewares\\": "tests/Ecommerce/Http/Middlewares/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
